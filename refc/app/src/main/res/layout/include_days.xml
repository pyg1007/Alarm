<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="kr.ryan.weatheralarm.viewModel.AlarmEditViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_sunday"
            dayIndex="@{0}"
            dayStatus="@{viewModel.dayStatus.get(0)}"
            result="@{viewModel.dayClick}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:onClick="@{() -> viewModel.changeSelectedDaysStatus(0)}"
            android:text="@string/sunday"
            android:textColor="@color/red"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_monday"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_monday"
            dayIndex="@{1}"
            dayStatus="@{viewModel.dayStatus.get(1)}"
            result="@{viewModel.dayClick}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:onClick="@{() -> viewModel.changeSelectedDaysStatus(1)}"
            android:text="@string/monday"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintLeft_toRightOf="@id/tv_sunday"
            app:layout_constraintRight_toLeftOf="@id/tv_tuesday"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_tuesday"
            dayIndex="@{2}"
            dayStatus="@{viewModel.dayStatus.get(2)}"
            result="@{viewModel.dayClick}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:onClick="@{() -> viewModel.changeSelectedDaysStatus(2)}"
            android:text="@string/tuesday"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintLeft_toRightOf="@id/tv_monday"
            app:layout_constraintRight_toLeftOf="@id/tv_wednesday"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_wednesday"
            dayIndex="@{3}"
            dayStatus="@{viewModel.dayStatus.get(3)}"
            result="@{viewModel.dayClick}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:onClick="@{() -> viewModel.changeSelectedDaysStatus(3)}"
            android:text="@string/wednesday"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintLeft_toRightOf="@id/tv_tuesday"
            app:layout_constraintRight_toLeftOf="@id/tv_thursday"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_thursday"
            dayIndex="@{4}"
            dayStatus="@{viewModel.dayStatus.get(4)}"
            result="@{viewModel.dayClick}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:onClick="@{() -> viewModel.changeSelectedDaysStatus(4)}"
            android:text="@string/thursday"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintLeft_toRightOf="@id/tv_wednesday"
            app:layout_constraintRight_toLeftOf="@id/tv_friday"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_friday"
            dayIndex="@{5}"
            dayStatus="@{viewModel.dayStatus.get(5)}"
            result="@{viewModel.dayClick}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:onClick="@{() -> viewModel.changeSelectedDaysStatus(5)}"
            android:text="@string/friday"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintLeft_toRightOf="@id/tv_thursday"
            app:layout_constraintRight_toLeftOf="@id/tv_saturday"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_saturday"
            dayIndex="@{6}"
            dayStatus="@{viewModel.dayStatus.get(6)}"
            result="@{viewModel.dayClick}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:onClick="@{() -> viewModel.changeSelectedDaysStatus(6)}"
            android:text="@string/saturday"
            android:textColor="@color/blue"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintLeft_toRightOf="@id/tv_friday"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
