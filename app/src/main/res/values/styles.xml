<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NewDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.AppCompat.Splash" parent="Theme.SplashScreen">

        <item name="windowSplashScreenBackground">@color/gray_400</item>

        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_alarm</item>

        <item name="postSplashScreenTheme">@style/Theme.WeatherAlarm</item>
    </style>
</resources>