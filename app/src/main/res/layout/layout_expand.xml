<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="252dp">

    <TextView
        android:id="@+id/tv_expand_location"
        style="@style/TextAppearance.Compat.Notification.Title"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_below="@id/tv_expand_location"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_weather_status"
            android:layout_width="@dimen/remote_image_width"
            android:layout_height="@dimen/remote_image_height"
            android:layout_gravity="center"
            android:contentDescription="@string/weather" />

        <TextView
            android:id="@+id/tv_temperature"
            style="@style/TextAppearance.Compat.Notification.Info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_weather_state"
                style="@style/TextAppearance.Compat.Notification.Info"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|bottom"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_max_min_temperature"
                style="@style/TextAppearance.Compat.Notification.Info"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>